rd:</label>\r\n        <input type=\"password\" id=\"password\" name=\"password\" v-model=\"password\" required>\r\n        <br><br>\r\n        <label for=\"email\">Email:</label>\r\n        <input type=\"email\" id=\"email\" name=\"email\" v-model=\"email\" required>\r\n        <br><br>\r\n        <button type=\"submit\">Login</button>\r\n      </form>\r\n    </div>\r\n    <button class=\"lg-button\" v-if=\"isAuthenticated\" @click=\"logout\">Logout</button>\r\n  </div>\r\n</template>\r\n\r\n<script>\r\nimport axios from 'axios';\r\n\r\nexport default {\r\n  data() {\r\n    return {\r\n      name: '',\r\n      password: '',\r\n      email: '',\r\n    };\r\n  },\r\n  computed: {\r\n    isAuthenticated() {\r\n      // Retrieve the authentication status from localStorage\r\n      return localStorage.getItem('isAuthenticated') === 'true';\r\n    },\r\n  },\r\n  methods: {\r\n    async login() {\r\n      try {\r\n        const response = await axios.get('http://127.0.0.1:8000/api/usersusers/', {\r\n          username: this.username,\r\n          password: this.password,\r\n          email: this.email,\r\n        });\r\n\r\n        const token = response.data.access;\r\n\r\n        // Save the token to localStorage\r\n        localStorage.setItem('isAuthenticated', 'true');\r\n\r\n        // Redirect to home page\r\n        this.$router.push('/home');\r\n      } catch (error) {\r\n        alert('Invalid credentials');\r\n      }\r\n    },\r\n    logout() {\r\n      // Remove the authentication status from localStorage\r\n      localStorage.removeItem('isAuthenticated');\r\n\r\n      // Redirect to login page\r\n      this.$router.push('/login');\r\n    },\r\n  },\r\n};\r\n</script>\r\n\r\n\r\n\r\n<style>\r\n.login-page{\r\n  text-align: center;\r\n}\r\n.login-p{\r\n  text-align: center;\r\n}.lg-button{\r\n  background-color: cadetblue;\r\n    margin-top: 10px;\r\n    text-align: right;\r\n    border-radius: 8px;\r\n}\r\n</style>"]}]}